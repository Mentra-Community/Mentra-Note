{
  "name": "@mentra/display-utils",
  "version": "1.0.0",
  "description": "Pixel-accurate text measurement and wrapping for smart glasses displays. Shared between cloud SDK and mobile app.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "development": {
        "import": "./src/index.ts",
        "require": "./src/index.ts",
        "types": "./src/index.ts"
      },
      "default": {
        "import": "./dist/index.js",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "scripts": {
    "build": "rm -rf dist && bun x tsc -p tsconfig.json",
    "dev": "bun x tsc --watch",
    "typecheck": "bun x tsc --noEmit",
    "prepare": "bun run build"
  },
  "devDependencies": {
    "opentype.js": "^1.3.4",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "mentra",
    "smart-glasses",
    "display",
    "text-wrapping",
    "text-measurement"
  ],
  "license": "MIT"
}
